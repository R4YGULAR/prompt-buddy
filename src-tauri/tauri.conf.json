{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prompt Picker",
  "version": "0.1.0",
  "identifier": "com.prompt-picker.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Prompt Picker",
        "width": 400,
        "height": 500,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": false,
        "center": true,
        "dragDropEnabled": false,
        "shadow": false,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
