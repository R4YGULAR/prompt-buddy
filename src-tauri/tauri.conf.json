{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prompt Buddy",
  "version": "0.1.0",
  "identifier": "com.promptbuddy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Prompt Buddy",
        "width": 800,
        "height": 80,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "center": false,
        "x": 200,
        "y": 950,
        "dragDropEnabled": true,
        "shadow": false,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "focus": false,
        "acceptFirstMouse": true,
        "visible": false,
        "minimizable": false,
        "maximizable": false,
        "closable": true,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signing": {
        "identity": "$APPLE_CERTIFICATE_IDENTITY"
      },
      "notarization": {
        "appleId": "$APPLE_ID",
        "password": "$APPLE_PASSWORD",
        "teamId": "$APPLE_TEAM_ID"
      }
    }
  }
}
